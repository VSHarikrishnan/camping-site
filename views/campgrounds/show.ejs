<%- include("../partials/header.ejs") %>
    <div class="container">
        <div class="row">
            <div class="col-md-3">
                <p class="lead">Yelpcamp</p>
                <div class="list-group">
                    <li class="list-group-item active">info1</li>
                    <li class="list-group-item">info2</li>
                    <li class="list-group-item">info3</li>


                </div>
            </div>
            <div class="col-md-9" style="padding: 0;">
                <div class="img-thumbnail">
                    <div class="figure">
                        <img class="img-responsive" src="<%= campground.image%>">

                        <div class="caption">

                            <h4 class="float-left">
                                <a href="">
                                    <%= campground.name%>
                                </a>
                            </h4>



                            <h4 class="float-right">$
                                <%= campground.price%>/night</h4>

                        </div>
                        <div class="float-left">
                            <%= campground.description%>

                                <p> <em> <strong>Submitted by :
                                    <%=campground.author.username%>
                                </strong></em></p>
                                <%if(currentuser && campground.author.id.equals(currentuser._id)){%>
                                    <a class="btn btn-warning btn-sm" href="/campgrounds/<%= campground.id%>/edit">Edit </a>
                                    <form class="delete" action="/campgrounds/<%= campground.id%>?_method=DELETE" method="POST">
                                        <button class="btn btn-danger btn-sm">delete</button></form>
                                    <%}%>
                        </div>
                    </div>
                </div>
                <div class="card card-body bg-light">
                    <div class="text-right"> <a class="btn btn-primary " href="/campgrounds/<%= campground.id%>/comments/new">add comment</a></div>
                    <hr>

                    <% campground.comments.forEach(function(comment){ %>
                        <div class="row">
                            <div class="col-md-12">
                                <strong><%= comment.author.username %></strong>: <span class="float-right">10 days ago</span>
                                <p>
                                    <%= comment.text%>
                                </p>
                                <%if(currentuser && comment.author.id.equals(currentuser._id)){%>
                                    <a class="btn btn-warning btn-sm" href="/campgrounds/<%= campground.id%>/comments/<%= comment.id%>/edit">Edit </a>
                                    <form class="delete" action="/campgrounds/<%= campground.id%>/comments/<%= comment.id%>?_method=DELETE" method="POST">
                                        <button class="btn btn-danger btn-sm">delete</button></form>
                                    <%}%>
                            </div>
                        </div>
                        <% })%>
                </div>
            </div>
            <%- include("../partials/footer.ejs") %>
        </div>